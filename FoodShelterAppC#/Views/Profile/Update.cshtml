<!-- Views/Profile/Update.cshtml -->
@model User
@{
    ViewData["Title"] = "Update Profile";
}
<div class="dashboard-container">
    <div class="card">
        <div class="card-header">
            <h2><i class="fas fa-user-edit"></i> Update Profile</h2>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="Profile" asp-action="Update" class="profile-form">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" value="@Model.Name" class="form-control">
                </div>
                <div class="form-group">
                    <label for="bio">Bio:</label>
                    <textarea id="bio" name="bio" class="form-control">@Model.Bio</textarea>
                </div>
                <div class="form-group">
                    <label for="website">Website:</label>
                    <input type="url" id="website" name="website" value="@Model.Website" class="form-control">
                </div>
                <div class="form-group">
                    <label for="contact">Contact:</label>
                    <input type="text" id="contact" name="contact" value="@Model.Contact" class="form-control">
                </div>
                <div class="form-group">
                    <label for="donationLink">Donation Link:</label>
                    <input type="url" id="donationLink" name="donationLink" value="@Model.DonationLink" class="form-control">
                </div>
                <div class="form-actions">
                    <button type="submit" class="dashboard-btn dashboard-btn-edit">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <a asp-controller="Dashboard" asp-action="Index" class="dashboard-btn dashboard-btn-delete">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>